---
import type { OptionsUserKeys } from '../types/optionsUser'

  const options : OptionsUserKeys[] = ['generate', 'upload', 'favorite' , 'search' , 'categories']
  import Links from './Links.astro'

---

<footer>
  {
    options.map((value: OptionsUserKeys) => <Links name = {value}/>)
  }
</footer>

<style>

  footer {
    top: 40px;
    background-color: var(--secundary-color);
    height: 80px;
    display: flex;
    place-content: center;
    align-items: center;
    gap: 16px;
    z-index: 3;
    position: sticky;
    border-radius: 0 0 25px 25px;
  }

  @media screen and (min-width: 560px) {
    footer {
      position: fixed;
      right: 12px;
      top: 204px;
      flex-direction: column;
      width: 78px;
      height: 500px;
      border-radius: 25px 0 0 25px;
    }
  }

  @media screen and (min-width: 760px) {
    footer {
      right: 0;
    }
  }

</style>